				{
					"name": "Generate API Key",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.data && jsonData.data.apiKey) {",
									"    console.log(\"API Key: \" + jsonData.data.apiKey);",
									"    pm.collectionVariables.set(\"apiKey\", jsonData.data.apiKey);",
									"}",
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": "{{baseUrl}}/api/generate-key"
					},
					"response": []
				}
			]
